# Environment Configuration
# Sao chép file này thành .env và điều chỉnh các giá trị

# Environment
NODE_ENV=development

# Database Configuration
DB_HOST=127.0.0.1
DB_PORT=3306
DB_USER=root
DB_PASSWORD=
DB_NAME=vongquay_db

# API Configuration
API_BASE_URL=http://localhost/vongquay/api

# Logging Configuration
LOG_LEVEL=debug
DEBUG=true

# Cache Configuration
CACHE_ENABLED=true
CACHE_TTL=300000

# Security Configuration
JWT_SECRET=your-secret-key-here
JWT_EXPIRES_IN=3600

# SSL Configuration (Production)
SSL_ENABLED=false
SSL_CERT_PATH=
SSL_KEY_PATH=

# Pool Configuration
DB_POOL_MIN=0
DB_POOL_MAX=10
DB_POOL_ACQUIRE_TIMEOUT=60000
DB_POOL_CREATE_TIMEOUT=30000

# Retry Configuration
API_RETRY_ATTEMPTS=3
API_RETRY_DELAY=1000
API_TIMEOUT=30000
